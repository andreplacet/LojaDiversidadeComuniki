@model ShoppingCartViewModel

<div class="Container">
    <div class="row checkoutForm">
        <div>
            <h4> Seu carrinho de compras : </h4>
        </div>

        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Produto</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCarts)
                {
                    <tr>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-left">@item.Product.Name</td>
                        <td class="text-right">@item.Product.Price.ToString("c")</td>

                        <td class="text-right">
                            @((item.Quantity * item.Product.Price).ToString("c"))
                        </td>

                        <td class="text-center">
                            <a asp-controller="ShoppingCart" asp-action="RemoveItemFromCart" asp-route-lancheId="@item.Product.Id">
                                <img src="~/images/remove.ico" width="10px" height="10px" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.ShoppingCart.GetToTal().ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>


        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Continuar Comprando</a>
            </div>
        </div>
        <br />
    </div>
</div>
